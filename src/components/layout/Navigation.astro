---
import LinkWrapper from '@/components/common/LinkWrapper.astro';
import { siteConfig } from '@/site.config';

const currentPath = Astro.url.pathname;
---

<!-- <ul class="not-prose flex flex-col md:flex-row gap-6 text-lg md:text-base font-mono sm:font-medium"> -->
{siteConfig.navigation.pages.map(page => {
  const isActive =
    currentPath === page.url ||
    currentPath.startsWith(page.url);

  return (
    <LinkWrapper
      href={page.url}
      class:list={[
        'group link-animate',
        isActive && 'text-primary font-semibold'
      ]}
      aria-current={isActive ? 'page' : undefined}
    >
      /{page.title.toLowerCase()}
    </LinkWrapper>
  );
})}
