---
import type { Post, Project } from '@/types';
import { getEntriesByYearSorted } from '@/utils/entries';
import ContentCard from '@/components/content/ContentCard.astro';
import ContentEntry from '@/components/content/ContentEntry.astro';
import ArticleCard from '@/components/cards/ArticleCard.astro';

interface Props {
  entries: Post[] | Project[];
  display?: 'list' | 'card' | 'grid';
  groupByYear?: boolean;
  title?: string;
  description?: string;
  showImages?: boolean;
  showDescription?: boolean;
  showTags?: boolean;
  showMeta?: boolean;
  cardContext?: 'featured' | 'recent' | 'posts' | 'tags' | 'docs';
  class?: string;
}

const {
  entries,
  display = 'list',
  groupByYear = false,
  title,
  description,
  showImages = false,
  showDescription = display !== 'list',
  showTags = display !== 'list',
  showMeta = true, // Always show meta (includes date) unless explicitly disabled
  cardContext = 'posts',
  class: customClass = '',
} = Astro.props;

// Handle grouping
const groupedEntries = groupByYear ? getEntriesByYearSorted(entries) : null;
const showGrouped = groupByYear && groupedEntries && groupedEntries.length > 0;

// Display class based on mode
const displayClass = {
  list: 'space-y-2',
  card: 'grid grid-cols-1 gap-6',
  grid: 'grid grid-cols-1 md:grid-cols-2 gap-6',
}[display];

// Determine if using list item or card
const useListItem = display === 'list';
const isCompact = display === 'list';
---

<section class={`animate not-prose ${customClass}`}>
  {/* Section Header */}
  {(title || description) && (
    <div class="px-2 sm:px-4 py-2 mb-4 sm:mb-6">
      {title && (
        <h2 class="text-xl font-bold text-content mb-2">
          {title}
        </h2>
      )}
      {description && (
        <p class="text-content-3">
          {description}
        </p>
      )}
    </div>
  )}

  {/* Content Display */}
  {showGrouped ? (
    /* Grouped by Year */
    <div class="space-y-8">
      {groupedEntries.map(([year, yearEntries]) => (
        <div>
          {/* Year Heading */}
          <h3
            class="text-lg font-semibold text-content-3 font-mono mb-4"
            data-pagefind-filter="year"
          >
            {year}
          </h3>

          {/* Entries for this year */}
          <div class={displayClass}>
            {yearEntries.map((entry) =>
              useListItem ? (
                <ContentEntry entry={entry} />
              ) : (
                <ArticleCard 
                  post={entry}
                  showImages={showImages}
                  showDescription={showDescription}
                  showTags={showTags}
                  showMeta={showMeta}
                  eager
                />
              )
            )}
          </div>
        </div>
      ))}
    </div>
  ) : (
    /* Flat Display */
    <div class={displayClass}>
      {entries.map((entry) =>
        useListItem ? (
          <ContentEntry entry={entry} />
        ) : (
          // <ContentCard
          //   entry={entry}
          //   showImages={showImages}
          //   showDescription={showDescription}
          //   showTags={showTags}
          //   showMeta={showMeta}
          //   context={cardContext}
          //   eager
          // />
          <ArticleCard 
            post={entry}
            showImages={showImages}
            showDescription={showDescription}
            showTags={showTags}
            showMeta={showMeta}
            eager
          />
        )
      )}
    </div>
  )}
</section>