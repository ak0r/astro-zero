---
import type { Gallery } from '@/types';
import GalleryCard from './GalleryCard.astro';

interface Props {
  galleries: Gallery[];
  class?: string;
}

const { galleries, class: className = '' } = Astro.props;
---

<div class={`gallery-grid grid grid-cols-1 md:grid-cols-2 gap-8 ${className}`}>
  {galleries.map(gallery => (
    <GalleryCard gallery={gallery} />
  ))}
</div>

<style>
  /* Optional: Add masonry-like effect on larger screens */
  @media (min-width: 768px) {
    .gallery-grid {
      /* Standard grid is fine, or can add auto-flow dense */
      grid-auto-flow: dense;
    }
  }
</style>