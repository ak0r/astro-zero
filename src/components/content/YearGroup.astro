---
import type { Post } from '@/types';
import PostEntry from './PostEntry.astro';

interface Props {
  year: number;
  entries: Post[];
  showIcon?: boolean;
}

const { year, entries, showIcon = true } = Astro.props;
---

<section class="year-group">
  
  <h2 class="text-lg font-semibold text-content-3 font-mono mb-4">
    {year}
  </h2>
  
  <div class="flex flex-col gap-1">
    {entries.map(entry => (
      <PostEntry entry={entry} showIcon={showIcon} />
    ))}
  </div>

</section>  