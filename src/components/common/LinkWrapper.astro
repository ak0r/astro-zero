---
type Props = {
  href: string;
  class?: string;
  external?: boolean;
  underline?: boolean;
  active?: boolean;
};

const {
  href,
  class: className = '',
  external = false,
  underline = false,
  active = false,
  ...rest
} = Astro.props;

const isExternal = external || href.startsWith('http');

const underlineClass = underline ? 'underline underline-offset-[3px]' : '';
const activeClass = active ? 'font-semibold text-content-1!' : '';

const combinedClass = [
  'transition-colors duration-300 ease-in-out',
  underlineClass,
  activeClass,
  className,
]
  .filter(Boolean)
  .join(' ');
---

<a
  href={href}
  target={isExternal ? '_blank' : undefined}
  rel={isExternal ? 'noopener noreferrer' : undefined}
  class={combinedClass}
  {...rest}
>
  <slot />
</a>
