{
  "name": "ordinary",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "ASTRO_CONTENT_COLLECTION_CACHE=false node scripts/sync-attachments.js && astro dev",
    "build": "node scripts/sync-attachments.js && astro build && npx pagefind --site dist && cp -r dist/pagefind public/",
    "preview": "astro preview",
    "astro": "astro",
    "sync-attachments": "node scripts/sync-attachments.js",
    "sync-content": "git submodule update --remote && echo '✅ Content synced from remote'",
    "sync-content:init": "git submodule update --init --recursive && echo '✅ Submodule initialized'"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@iconify-json/tabler": "^1.2.25",
    "@pagefind/default-ui": "^1.4.0",
    "@preline/collapse": "^3.2.3",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.6",
    "astro-expressive-code": "^0.41.5",
    "astro-icon": "^1.1.5",
    "astro-og-canvas": "^0.10.0",
    "glightbox": "^3.3.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-smartypants": "^3.0.2",
    "tailwindcss": "^4.1.18",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "pagefind": "^1.4.0"
  }
}
